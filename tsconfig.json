{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"ES2019",
			"esnext",
			"WebWorker"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"jsx": "preserve",
		"moduleResolution": "node",
		"allowUmdGlobalAccess": true,
		"declaration": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"./node_modules",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.story.tsx",
		"**/*.stories.tsx"
	]
}